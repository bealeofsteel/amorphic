{
  "include": [
    "./lib/AmorphicServer.ts",
    "./lib/CustomMiddleWare.ts",
    "./lib/RoutesSetup.ts"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es2016",
      "es2017",
      "esnext"
    ],
    "strictNullChecks": true,
    "outDir": "./dist",
    "rootDir": "./",
    "noImplicitAny": false,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
